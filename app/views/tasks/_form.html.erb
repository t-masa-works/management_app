<%= form_with(model:@task ,local:true) do |form| %>
  <% if @task.errors.any? %>
     <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>
  </div>
  <div class="task_title">
    <%= form.label :title %></br>
    <%= form.text_field :title %>
  </div>
  <div class="task_content">
    <%= form.label :content %></br>
    <%= form.text_area :content %>
  </div>
    <div class="task_content">
    <%= form.label :end_time %></br>
    <%= form.datetime_field :end_time %>
  </div>
  </div>
  <div class="task_content">
    <%= form.label :status %></br>
    <%= form.select :status, Task.enum_options_for_select(:status) %>
  </div>
  <div class="task_content">
    <%= form.label :priority %></br>
    <%= form.select :priority, Task.enum_options_for_select(:priority) %>
  </div>

  <%= form.submit "タスクを保存", data: {confirm: "タスクを保存してもいいですか？"} %>
  <%= link_to "タスク一覧に戻る", tasks_path %>
<% end %>